<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.consumerapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.dicoding.consumerapp.READ_DATABASE" />
    <uses-permission android:name="com.dicoding.consumerapp.WRITE_DATABASE" />
    <permission android:name="com.dicoding.consumerapp.READ_DATABASE" android:protectionLevel="normal"/>
    <permission android:name="com.dicoding.consumerapp.WRITE_DATABASE" android:protectionLevel="normal"/>

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubUser"
        android:usesCleartextTraffic="true">
        <provider
            android:name=".provider.UserProvider"
            android:authorities="com.dicoding.consumerapp"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.dicoding.consumerapp.READ_DATABASE"
            android:writePermission="com.dicoding.consumerapp.WRITE_DATABASE"/>

        <receiver
            android:name=".receiver.AlarmReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".activity.FavoriteActivity"
            android:exported="true"
            android:label="@string/title_activity_favorite"
            android:theme="@style/Theme.GithubUser.NoActionBar" />
        <activity android:name=".activity.DetailActivity" />
        <activity android:name=".activity.UserListActivity" />
        <activity android:name=".activity.PreferenceActivity" />
        <activity
            android:name=".activity.SpalshScreenActivity"
            android:theme="@style/AppTheme.noActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>